<% layout("/layouts/boilerplate") %>

<style>
/* General Container */
.container {
    max-width: 900px;
    margin: auto;
    padding: 30px;
}

/* Product Form Section */
.product-form {
    background-color: #f8f9fa;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.product-form h3 {
    font-size: 1.8rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
}

.product-form .form-label {
    font-weight: bold;
    color: #333;
}

.product-form .form-control, .form-select {
    border-radius: 8px;
    padding: 12px;
}

.product-form .form-control:focus, .form-select:focus {
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

.product-form button {
    width: 100%;
    padding: 12px;
    font-weight: bold;
}

.product-form .btn-outline-dark {
    background-color: #007bff;
    color: white;
}

/* Image Upload Section */
.image-upload {
    text-align: center;
}

.image-upload img {
    max-width: 100%;
    max-height: 250px;
    margin-bottom: 10px;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

/* Error or Success Messages */
.alert {
    margin-top: 20px;
    font-size: 1rem;
    border-radius: 8px;
}

.alert-success {
    background-color: #28a745;
    color: white;
}

.alert-danger {
    background-color: #dc3545;
    color: white;
}

</style>

<div class="container mt-5">
    <div class="product-form">
        <h3>Sell a Product</h3>

    

        <form action="/products" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
            <!-- Product Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Product Title</label>
                <input type="text" id="title" name="product[title]" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter a product title.
                </div>
            </div>

            <!-- Product Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Product Description</label>
                <textarea id="description" name="product[description]" class="form-control" rows="4" required></textarea>
                <div class="invalid-feedback">
                    Please enter a description of the product.
                </div>
            </div>

            <!-- Product Price -->
            <div class="mb-3">
                <label for="price" class="form-label">Product Price (â‚¹)</label>
                <input type="number" id="price" name="product[price]" class="form-control" step="0.01" required>
                <div class="invalid-feedback">
                    Please enter a valid price.
                </div>
            </div>


            <!-- Product Image Upload -->
            <div class="mb-3">
                <label for="image" class="form-label">Upload Product Image</label>
                <input type="file" id="image" name="product[image]" class="form-control" accept="image/*" required>
                <div class="invalid-feedback">
                    Please upload an image of the product.
                </div>
            </div>


            <!-- Submit Button -->
            <button class="btn btn-outline-dark" type="submit">List Product</button>
        </form>
    </div>
</div>


