<% layout("/layouts/boilerplate") %>

<style>
/* General Container */

.container {
    max-width: 1200px;
    margin: auto;
    padding: 20px;
    font-family: 'Poppins', sans-serif;
    background-color: #f9f9f9;
}

/* Product Section */
.container {
    max-width: 1200px;
    margin: auto;
    padding: 20px;
}

.product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
}

.product-card {
    background-color: #fdf5e6; /* Pastel cream */
    border-radius: 12px;
    padding: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s, box-shadow 0.3s;
}

.product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
}

.product-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin-bottom: 15px;
}

.product-name {
    font-size: 1.2rem;
    color: #333;
    margin-bottom: 10px;
}

.product-price {
    font-size: 1.1rem;
    font-weight: bold;
    color: #5d5c61;
}

/* Responsiveness */
@media (max-width: 768px) {
    .navbar-container {
        flex-direction: column;
        text-align: center;
    }

    .menu {
        margin: 15px 0;
    }
}



/* Reviews Section */
.review-card {
    border-radius: 12px;
    border: 1px solid #ddd;
    padding: 20px;
    transition: transform 0.3s, box-shadow 0.3s;
    background-color: #fff;
    margin-bottom: 20px;
}

.review-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
}

.review-card .card-title {
    display: flex;
    align-items: center;
    font-size: 1.1rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
}

.review-card .card-title i {
    font-size: 1.5rem;
    margin-right: 10px;
    color: #007bff;
}

.review-card .star-rating i {
    font-size: 1.2rem;
    margin-right: 5px;
    color: #ffc107;
}

.review-card .star-rating i.far {
    color: #ddd;
}

.review-card .card-text {
    font-size: 1rem;
    color: #555;
    margin-bottom: 10px;
    line-height: 1.5;
}

.review-card button {
    font-size: 0.85rem;
    padding: 5px 10px;
    border-radius: 5px;
    font-weight: bold;
}

.text-muted {
    text-align: center;
    font-size: 1.1rem;
    color: #777;
}

/* Add Review Form */
.add-review-form label {
    font-weight: bold;
    margin-bottom: 10px;
    display: block;
}

.add-review-form textarea,
.add-review-form select {
    border-radius: 8px;
    padding: 10px;
    border: 1px solid #ddd;
    width: 100%;
    font-size: 1rem;
    margin-bottom: 15px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.add-review-form textarea:focus,
.add-review-form select:focus {
    border-color: #007bff;
    outline: none;
}

.add-review-form .btn {
    padding: 10px 20px;
    font-size: 1rem;
    font-weight: bold;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 8px;
    transition: background-color 0.3s;
}

.add-review-form .btn:hover {
    background-color: #0056b3;
}

/* Responsive Design */
@media (max-width: 768px) {
    .product-title {
        font-size: 1.8rem;
    }

    .product-price {
        font-size: 1.5rem;
    }

    .product-actions .btn {
        padding: 8px 12px;
        font-size: 0.9rem;
    }

    .review-card {
        padding: 15px;
    }
}


</style>

<div class="container mt-5">
    <!-- Product Details Section -->
    <div class="row">
        <div class="col-md-6">
            <img 
                src="<%= product.image ? product.image.url : '/images/default-product.jpg' %>" 
                alt="<%= product.title %>" 
                class="img-fluid product-image">
        </div>
        <div class="col-md-6">
            <h1 class="product-title"><%= product.title %></h1>
            <p class="product-description"><%= product.description || "No description available." %></p>
            <h3 class="product-price">â‚¹ <%= product.price.toLocaleString("en-IN") %></h3>
            <div class="product-actions mt-4">
           
                <form action="/cart/<%= product._id %>" method="POST"  style="display:inline;">
                    <button class="btn btn-success" >Add to Cart</button>
                  </form>
                    <form method="get" action="/checkout/6756c6619072dc57ae8553b1" style="display:inline;">
                        <button class="btn btn-primary">Buy Now</button>
                    </form>
             
            </div>
        </div>
    </div>>

    <!-- Reviews Section -->
    <div class="mt-5">
        <h3>Reviews</h3>
        <% if (product.reviews.length > 0) { %>
            <div class="row">
                <% product.reviews.forEach(review => { %>
                    <div class="col-md-6 mb-4">
                        <div class="card review-card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-user-circle"></i> @<%= review.author ? review.author.username : "Anonymous" %>
                                </h5>
                                <p class="star-rating">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="<%= i <= review.rating ? 'fas fa-star' : 'far fa-star' %>"></i>
                                    <% } %>
                                </p>
                                <p class="card-text"><%= review.comment %></p>
                                <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
                                    <form method="POST" action="/products/<%= product._id %>/reviews/<%= review._id %>?_method=DELETE">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-muted">No reviews yet. Be the first to leave a review!</p>
        <% } %>
    </div>

    <!-- Add Review Section -->
    <% if (currUser) { %>
        <div class="add-review-form mt-5">
            <h3>Leave a Review</h3>
            <form action="/products/<%= product._id %>/reviews" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <select id="rating" name="review[rating]" class="form-select" required>
                        <option value="" disabled selected>Select rating</option>
                        <option value="1">1 - Poor</option>
                        <option value="2">2 - Fair</option>
                        <option value="3">3 - Good</option>
                        <option value="4">4 - Very Good</option>
                        <option value="5">5 - Excellent</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea id="comment" name="review[comment]" class="form-control" rows="4" required></textarea>
                </div>
                <button class="btn btn-outline-dark">Submit Review</button>
            </form>
        </div>
    <% } %>
</div>
